// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// USER MODEL - Authentication & Authorization
// ============================================
model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  firstName String  @map("first_name")
  lastName  String  @map("last_name")

  // Estado del usuario
  isActive Boolean @default(true) @map("is_active")

  // Campos de auditoría
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  createdBy   String?   @map("created_by")
  updatedBy   String?   @map("updated_by")

  // Soft delete
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by")

  // Relaciones
  userRoles          UserRole[]
  passwordResetCodes PasswordResetCode[]
  notifications      Notification[]
  agentsAsInternal   Agent[]
  rentalFinancialConfigsAsAgent RentalFinancialConfig[]

  // Índices para optimización
  @@index([email])
  @@index([isActive])
  @@index([deletedAt])
  @@map("users")
}

// ============================================
// PASSWORD RESET CODE - Recuperación de contraseña
// ============================================
model PasswordResetCode {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  code      String   // Código de 6 dígitos enviado por correo
  expiresAt DateTime @map("expires_at")
  usedAt    DateTime? @map("used_at")

  createdAt DateTime @default(now()) @map("created_at")

  // Relaciones
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([code])
  @@index([expiresAt])
  @@map("password_reset_codes")
}

// ============================================
// ROLE MODEL - Roles del sistema
// ============================================
model Role {
  id          String  @id @default(uuid())
  name        String  @unique
  code        String  @unique // Código único para identificar el rol (ADMIN, MANAGER, etc.)
  description String?

  // Estado
  isActive Boolean @default(true) @map("is_active")

  // Campos de auditoría
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Relaciones
  userRoles        UserRole[]
  roleApplications RoleApplication[]

  @@index([code])
  @@index([isActive])
  @@map("roles")
}

// ============================================
// USER_ROLE MODEL - Relación muchos a muchos
// ============================================
model UserRole {
  id     String @id @default(uuid())
  userId String @map("user_id")
  roleId String @map("role_id")

  // Estado
  isActive Boolean @default(true) @map("is_active")

  // Campos de auditoría
  assignedAt DateTime  @default(now()) @map("assigned_at")
  assignedBy String?   @map("assigned_by")
  revokedAt  DateTime? @map("revoked_at")
  revokedBy  String?   @map("revoked_by")

  // Relaciones
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
  @@map("user_roles")
}

// ============================================
// APPLICATION MODEL - Aplicaciones del sistema
// ============================================
model Application {
  id          String  @id @default(uuid())
  name        String
  slug        String  @unique // Identificador único para URL (alquileres, ventas, etc.)
  description String?
  icon        String? // Nombre del ícono (home, building, chart, etc.)
  color       String? // Color del ícono (#0BB0BE, #E5533D, etc.)
  url         String? // URL de la aplicación (interna o externa)

  // Estadísticas (pueden ser calculadas o almacenadas)
  activeCount  Int @default(0) @map("active_count")  // Ej: propiedades activas
  pendingCount Int @default(0) @map("pending_count") // Ej: tareas pendientes

  // Estado y orden
  isActive Boolean @default(true) @map("is_active")
  order    Int     @default(0) // Orden de visualización

  // Campos de auditoría
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Relaciones
  roleApplications RoleApplication[]
  menus           Menu[]
  clients         Client[]
  properties      Property[]
  rentals         Rental[]
  agents          Agent[]

  @@index([slug])
  @@index([isActive])
  @@index([order])
  @@map("applications")
}

// ============================================
// MENU MODEL - Menús dinámicos por aplicación
// ============================================
model Menu {
  id            String  @id @default(uuid())
  applicationId String  @map("application_id")
  parentId      String? @map("parent_id")
  label         String
  icon          String? // Nombre del ícono (home, building, document, etc.)
  path          String? // Ruta para navegación (ej: /alquileres/propiedades)
  order         Int     @default(0) @map("order")
  isActive      Boolean @default(true) @map("is_active")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relaciones
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  parent      Menu?       @relation("MenuHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Menu[]      @relation("MenuHierarchy")

  @@index([applicationId])
  @@index([parentId])
  @@index([order])
  @@map("menus")
}

// ============================================
// ROLE_APPLICATION MODEL - Permisos de roles a aplicaciones
// ============================================
model RoleApplication {
  id            String @id @default(uuid())
  roleId        String @map("role_id")
  applicationId String @map("application_id")

  // Permisos específicos (opcional, para futuro)
  canRead   Boolean @default(true) @map("can_read")
  canWrite  Boolean @default(false) @map("can_write")
  canDelete Boolean @default(false) @map("can_delete")
  canAdmin  Boolean @default(false) @map("can_admin")

  // Campos de auditoría
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relaciones
  role        Role        @relation(fields: [roleId], references: [id], onDelete: Cascade)
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@unique([roleId, applicationId])
  @@index([roleId])
  @@index([applicationId])
  @@map("role_applications")
}

// ============================================
// DOCUMENT_TYPE - Tipos de documento (DNI, RUC, etc.)
// ============================================
model DocumentType {
  id     String  @id @default(uuid())
  code   String  @unique // DNI, CE, RUC, etc.
  name   String
  length Int?    @map("length") // Longitud esperada del número
  isActive Boolean @default(true) @map("is_active")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  clients Client[]
  agents  Agent[]

  @@map("document_types")
}

// ============================================
// UBIGEO - Jerarquía geográfica (Perú)
// ============================================
model Department {
  id   String @id
  name String

  provinces Province[]

  @@map("departments")
}

model Province {
  id           String @id
  departmentId String @map("department_id")
  name         String

  department Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  districts   District[]

  @@index([departmentId])
  @@map("provinces")
}

model District {
  id         String @id
  provinceId String @map("province_id")
  name       String

  province   Province   @relation(fields: [provinceId], references: [id], onDelete: Cascade)
  addresses  Address[]
  properties Property[]

  @@index([provinceId])
  @@map("districts")
}

// ============================================
// CLIENT - Clientes (propietarios/inquilinos)
// ============================================
model Client {
  id            String   @id @default(uuid())
  applicationId String   @map("application_id")
  clientType    String   @map("client_type") // OWNER, TENANT

  // Documento
  documentTypeId String  @map("document_type_id")
  documentNumber String  @map("document_number")

  // Información personal / empresa
  fullName                    String  @map("full_name")
  legalRepresentativeName     String? @map("legal_representative_name")
  legalRepresentativePosition String? @map("legal_representative_position")

  // Contacto
  primaryPhone   String  @map("primary_phone")
  secondaryPhone String? @map("secondary_phone")
  primaryEmail   String  @map("primary_email")
  secondaryEmail String? @map("secondary_email")

  // Notas
  notes String? @db.Text

  isActive Boolean @default(true) @map("is_active")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  createdBy String?   @map("created_by")
  updatedBy String?   @map("updated_by")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by")

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  documentType DocumentType @relation(fields: [documentTypeId], references: [id], onDelete: Restrict)
  addresses   Address[]
  propertiesAsOwner Property[]
  rentalsAsTenant   Rental[]

  @@index([applicationId])
  @@index([documentTypeId])
  @@index([clientType])
  @@index([documentNumber])
  @@index([deletedAt])
  @@map("clients")
}

// ============================================
// ADDRESS - Direcciones de clientes
// ============================================
model Address {
  id         String  @id @default(uuid())
  clientId   String  @map("client_id")
  addressType String @map("address_type") // FISCAL, RESIDENCIAL
  addressLine String @map("address_line")
  districtId String  @map("district_id")
  reference  String? @db.Text
  isPrimary  Boolean @default(true) @map("is_primary")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  client   Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  district District @relation(fields: [districtId], references: [id], onDelete: Restrict)

  @@index([clientId])
  @@index([districtId])
  @@map("addresses")
}

// ============================================
// PROPERTY_TYPE - Tipos de propiedad (Departamento, Casa, etc.)
// ============================================
model PropertyType {
  id       String  @id @default(uuid())
  name     String
  code     String  @unique
  isActive Boolean @default(true) @map("is_active")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  properties Property[]

  @@map("property_types")
}

// ============================================
// PROPERTY - Propiedades (inmuebles en alquiler)
// ============================================
model Property {
  id             String   @id @default(uuid())
  applicationId  String   @map("application_id")
  code           String   // Código interno (ej: PROP-001)
  propertyTypeId String   @map("property_type_id")

  // Ubicación
  addressLine String  @map("address_line")
  districtId  String  @map("district_id")
  description String? @db.Text

  // Características
  area            Float?   @map("area") // m²
  bedrooms        Int?     @map("bedrooms")
  bathrooms       Int?     @map("bathrooms")
  ageYears        Int?     @map("age_years")
  floorLevel      String?  @map("floor_level")
  parkingSpaces   Int?     @map("parking_spaces")

  // Números de partida (máximo 3)
  partida1 String? @map("partida_1")
  partida2 String? @map("partida_2")
  partida3 String? @map("partida_3")

  // Propietario
  ownerId String @map("owner_id")

  // Información de alquiler
  monthlyRent       Float? @map("monthly_rent")
  maintenanceAmount Float? @map("maintenance_amount")
  depositMonths     Int?   @map("deposit_months")

  // Estado para listado: AVAILABLE, RENTED, EXPIRING, MAINTENANCE
  listingStatus String?  @map("listing_status")

  isActive Boolean @default(true) @map("is_active")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  createdBy String?   @map("created_by")
  updatedBy String?   @map("updated_by")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by")

  application  Application  @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  propertyType PropertyType @relation(fields: [propertyTypeId], references: [id], onDelete: Restrict)
  district     District     @relation(fields: [districtId], references: [id], onDelete: Restrict)
  owner        Client       @relation(fields: [ownerId], references: [id], onDelete: Restrict)
  rentals      Rental[]

  @@index([applicationId])
  @@index([propertyTypeId])
  @@index([districtId])
  @@index([ownerId])
  @@index([deletedAt])
  @@map("properties")
}

// ============================================
// RENTAL - Alquileres (contratos de alquiler)
// ============================================
model Rental {
  id             String    @id @default(uuid())
  applicationId  String    @map("application_id")
  propertyId     String    @map("property_id")
  tenantId       String    @map("tenant_id") // Client con clientType TENANT

  startDate       DateTime  @map("start_date")
  endDate         DateTime  @map("end_date")
  currency        String    @default("PEN") @map("currency") // PEN, USD
  monthlyAmount   Float     @map("monthly_amount")
  securityDeposit Float?    @map("security_deposit")
  paymentDueDay   Int       @default(5) @map("payment_due_day") // 1-28
  notes           String?   @db.Text

  status String @default("ACTIVE") @map("status") // ACTIVE, EXPIRED, CANCELLED

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  createdBy String?   @map("created_by")
  updatedBy String?   @map("updated_by")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by")

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  property    Property     @relation(fields: [propertyId], references: [id], onDelete: Restrict)
  tenant      Client       @relation(fields: [tenantId], references: [id], onDelete: Restrict)

  attachments RentalAttachment[]
  financialConfig RentalFinancialConfig?

  @@index([applicationId])
  @@index([propertyId])
  @@index([tenantId])
  @@index([status])
  @@index([deletedAt])
  @@map("rentals")
}

// ============================================
// AGENT - Agentes (interno = usuario del sistema, externo = terceros)
// ============================================
model Agent {
  id             String   @id @default(uuid())
  applicationId  String   @map("application_id")
  type           String   @map("type") // INTERNAL | EXTERNAL

  // INTERNAL: vincula a un usuario del sistema
  userId         String?  @map("user_id")

  // EXTERNAL: datos del agente externo (nombre, contacto)
  fullName       String   @map("full_name")
  email          String?  @map("email")
  phone          String?  @map("phone")
  documentTypeId String?  @map("document_type_id")
  documentNumber String?  @map("document_number")

  isActive       Boolean  @default(true) @map("is_active")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  application  Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  user         User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  documentType DocumentType? @relation(fields: [documentTypeId], references: [id], onDelete: SetNull)

  rentalFinancialConfigsExternal RentalFinancialConfig[] @relation("ExternalAgent")

  @@index([applicationId])
  @@index([type])
  @@index([userId])
  @@index([deletedAt])
  @@map("agents")
}

// ============================================
// RENTAL_FINANCIAL_CONFIG - Distribución financiera por alquiler
// Utilidades, gastos, impuestos, agente externo, agente interno
// ============================================
model RentalFinancialConfig {
  id        String   @id @default(uuid())
  rentalId  String   @unique @map("rental_id")
  currency  String   @default("PEN") @map("currency")

  // Gastos: tipo PERCENT (%) o FIXED (monto fijo), valor según tipo
  expenseType   String  @default("FIXED") @map("expense_type")   // PERCENT | FIXED
  expenseValue  Float   @default(0) @map("expense_value")

  // Impuestos (ej. retención)
  taxType   String  @default("FIXED") @map("tax_type")
  taxValue  Float   @default(0) @map("tax_value")

  // Agente externo: referencia a Agent (type EXTERNAL) o legacy nombre libre
  externalAgentId   String? @map("external_agent_id")
  externalAgentType   String  @default("FIXED") @map("external_agent_type")
  externalAgentValue  Float   @default(0) @map("external_agent_value")
  externalAgentName   String? @map("external_agent_name") // legacy, se usa si externalAgentId es null

  // Agente interno: usuario del sistema + comisión (se puede migrar a Agent después)
  internalAgentId    String? @map("internal_agent_id")
  internalAgentType  String  @default("FIXED") @map("internal_agent_type")
  internalAgentValue Float   @default(0) @map("internal_agent_value")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  rental        Rental @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  externalAgent Agent? @relation("ExternalAgent", fields: [externalAgentId], references: [id], onDelete: SetNull)
  internalAgentUser User? @relation(fields: [internalAgentId], references: [id], onDelete: SetNull)

  @@index([rentalId])
  @@index([internalAgentId])
  @@index([externalAgentId])
  @@map("rental_financial_configs")
}

// Adjuntos de alquiler: contrato firmado, acta de entrega
model RentalAttachment {
  id             String   @id @default(uuid())
  rentalId       String   @map("rental_id")
  type           String   @map("type") // CONTRACT, DELIVERY_ACT
  filePath       String   @map("file_path") // ruta relativa en servidor
  originalFileName String @map("original_file_name")

  createdAt DateTime @default(now()) @map("created_at")

  rental Rental @relation(fields: [rentalId], references: [id], onDelete: Cascade)

  @@index([rentalId])
  @@index([type])
  @@map("rental_attachments")
}

// ============================================
// NOTIFICATION - Notificaciones por usuario (in-app + persistencia)
// ============================================
model Notification {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  type      String   @map("type")   // RENTAL_CREATED, etc.
  title     String   @map("title")
  body      String?  @db.Text
  data      Json?    @map("data")   // { rentalId, applicationSlug, ... }
  readAt    DateTime? @map("read_at")

  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([readAt])
  @@index([createdAt])
  @@map("notifications")
}
